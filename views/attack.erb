<% if @game.current_turn.name == @game.player_2.name %>
<%=@game.player_1.name%> attacked <%=@game.player_2.name%>
<%else%>
<%=@game.player_2.name%> attacked <%=@game.player_1.name%>
<%end%>

<div>
    <%= @game.player_1.name %>: <%= @game.player_1.health %>HP
</div>
<div>
    <%= @game.player_2.name %>: <%= @player_2_score.to_s %>HP
</div>

<form action='/play'>
  <input type='submit' value='OK'>
</form>
