<% if @game.current_player.name == @game.player_1.name %>
<%=@game.player_1.name%> attacked <%=@game.player_2.name%>
<%else%>
<%=@game.player_2.name%> attacked <%=@game.player_1.name%>
<%end%>

<div>
    <%= @game.player_1.name %>: <%= @game.player_1.health %>HP
</div>
<div>
    <%= @game.player_2.name %>: <%= @game.player_2.health %>HP
</div>

<form action='/switch_turn' method='post'>
  <input type='submit' value='OK'>
</form>
